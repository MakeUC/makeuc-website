{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "./.eslintrc.cjs",
    "src/*.ts",
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}